{
  "name": "dev-sandbox",
  "version": "0.0.1",
  "bin": "dist/server/cli.js",
  "author": "Ilya Medvedev <ilya@medvedev.im>",
  "description": "Sandbox for local development",
  "repository": "https://github.com/iam-medvedev/dev-sandbox.git",
  "homepage": "https://github.com/iam-medvedev/dev-sandbox#readme",
  "bugs": "https://github.com/iam-medvedev/dev-sandbox/issues",
  "license": "MIT",
  "module": "commonjs",
  "files": [
    "dist"
  ],
  "keywords": [
    "dev",
    "sandbox"
  ],
  "scripts": {
    "dev:cli": "tsnd --project=tsconfig.json --files=./src/cli/index ./src/cli/index",
    "build:cli": "NODE_ENV=production tsc ./src/cli/* --esModuleInterop true --outDir ./dist",
    "build:sandbox": "yarn clean && tsnd --project=tsconfig.json --files=./scripts/build-sandbox ./scripts/build-sandbox",
    "doc": "sitedown ./ -l ./readme-layout.html -b ./.gh-pages",
    "commit": "yarn git-cz",
    "clean": "rm -rf ./dist"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@types/dts-bundle": "^0.0.32",
    "@types/node": "^16.4.7",
    "@types/prettier": "^2.3.2",
    "concurrently": "^6.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.22",
    "git-cz": "^4.7.6",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "monaco-editor": "^0.26.1",
    "semantic-release": "^17.4.4",
    "serve": "^12.0.0",
    "sitedown": "^5.0.0",
    "ts-node-dev": "^1.1.8",
    "type-fest": "^2.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cosmiconfig": "^7.0.0",
    "dts-bundle": "^0.7.3",
    "find-node-modules": "^2.1.2",
    "ora": "^5.4.1",
    "parse-es6-imports": "^1.0.1",
    "prettier": "^2.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "14.17.4",
    "yarn": "1.22.5"
  }
}
